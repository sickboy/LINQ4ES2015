{
  "version": "2.3",
  "atom": {
    "rewriteTsconfig": true
  },
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "es2017", "dom"
    ],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmitHelpers": true,
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true
    //, "strictNullChecks": true
  },
  "awesomeTypescriptLoaderOptions": {
    //"doTypeCheck": true,
    "forkChecker": true,
    "useCache": true,
    // we want generators
    // also we get weird circular dependencies and Aurelia errors if we target es5 directly :/
    "useBabel": false
  },
  "exclude": ["bower_components", "node_modules", "test"]
}
